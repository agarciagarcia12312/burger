<ul id="bugerList">
<h2><u>On the list...</u></h2>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.burger_name}}

				<form 
				action="/{{this.id}}?_method=PUT" 
				method="POST">
					<input type="hidden"
					name="devour" value="false">
					<button type="submit">Devour it ! </button>
				</form>	
			</li>
		{{/unless}}
	{{/each}}		
</ul>				


<ul id="finishedBurgers">	
<h2><u>Devoured burgers</u></h2>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.burger_name}}		
				
				<form action="/{{this.id}}?_method=DELETE" method="post">
					<input type="hidden" name="delete">
					<button type="submit">Delete burger</button>
				</form>
			</li>
		{{/if}}
	{{/each}}				
